{
    "name": "capelski.github.io",
    "version": "1.0.0",
    "description": "Personal page built in react",
    "scripts": {
        "build": "npm run clean:build && npm run build:articles && npm run build:client",
        "build:articles": "tsc src/components/articles/article-id.ts && mv src/components/articles/article-id.js src/components/articles/all-articles-id.js",
        "build:client": "webpack --config webpack/production.config.js",
        "build:ts": "tsc --noEmit -p tsconfig.json",
        "clean:build": "rm -rf docs",
        "clean:dependencies": "rm -rf node_modules/ package-lock.json",
        "prettier": "prettier --list-different \"src/**/*.{ts,tsx}\"",
        "prettier:fix": "prettier --write \"src/**/*.{ts,tsx}\"",
        "start": "node index.js",
        "start:dev": "webpack serve --config webpack/development.config.js"
    },
    "author": "Carles Capellas <capellas.carles@gmail.com>",
    "license": "ISC",
    "devDependencies": {
        "@dreysolano/prerender-spa-plugin": "^1.0.3",
        "@types/react": "16.9.41",
        "@types/react-dom": "16.9.8",
        "@types/react-helmet": "6.0.0",
        "@types/react-router-dom": "5.1.5",
        "@types/react-transition-group": "4.4.0",
        "awesome-typescript-loader": "5.2.1",
        "copy-webpack-plugin": "^8.1.0",
        "css-loader": "^5.2.0",
        "express": "^4.17.1",
        "html-loader": "1.1.0",
        "html-webpack-plugin": "^5.3.1",
        "mini-css-extract-plugin": "^1.3.9",
        "prettier": "2.0.5",
        "sass": "^1.69.5",
        "sass-loader": "^11.0.1",
        "typescript": "3.9.5",
        "webpack": "^5.28.0",
        "webpack-cli": "^4.5.0",
        "webpack-dev-server": "^3.11.2",
        "webpack-merge": "^5.7.3"
    },
    "dependencies": {
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "react-gist": "1.2.1",
        "react-helmet": "6.1.0",
        "react-router-dom": "5.2.0",
        "react-transition-group": "4.4.1"
    }
}
